<Window x:Class="TIDStation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="clr-namespace:TIDStation.UI"
        xmlns:local="clr-namespace:TIDStation"
        xmlns:data="clr-namespace:TIDStation.Data"
        ResizeMode="CanResizeWithGrip"
        WindowStyle="None"
        d:DataContext="{d:DesignInstance Type=data:Context, IsDesignTimeCreatable=True}"
        mc:Ignorable="d"        
        Background="#00000000"
        AllowsTransparency="True"        
        SizeChanged="Window_SizeChanged"
        Foreground="White"        
        Title="TID Station" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="#333333"/>
        </Style>
        <Style TargetType="ScrollBar">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Opacity" Value="0.5"/>
        </Style>
        <Style TargetType="ui:DecimalEntry">
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,-1,0,-2"/>
            <Setter Property="Padding" Value="0,0,0,0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="10"/>
        </Style>
        <Style TargetType="ui:Frequency">
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,-1,0,-2"/>
            <Setter Property="Padding" Value="0,0,0,0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="10"/>
        </Style>
        <Style TargetType="ui:NumEntry">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,-1,0,-2"/>
            <Setter Property="Padding" Value="0,0,0,0"/>
            <Setter Property="Foreground" Value="YellowGreen"/>
            <Setter Property="FontFamily" Value="Consolas"/>
        </Style>
        <Style TargetType="ui:PadButton">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Background" Value="#151515"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="Margin" Value="2,2,2,2"/>
        </Style>
        <Style TargetType="ui:Option">
            <Setter Property="Margin" Value="0,0,0,0"/>
            <Setter Property="Padding" Value="0,0,0,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="YellowGreen"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Margin" Value="0,0,0,0"/>
            <Setter Property="Padding" Value="0,0,0,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="YellowGreen"/>
        </Style>
        <Style TargetType="ui:PadLabel">
            <Setter Property="Foreground" Value="#cccccc"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="0,0,0,0"/>
            <Setter Property="Margin" Value="0,0,0,0"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>
    <Border x:Name="MainBorder" IsEnabled="{Binding UiReady.Value}" CornerRadius="20" Background="#333333" BorderThickness="2" BorderBrush="#444444">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.02*"/>
                <ColumnDefinition />
                <ColumnDefinition Width="0.01*"/>
                <ColumnDefinition />
                <ColumnDefinition Width="0.02*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.15*"/>
                <RowDefinition />
                <RowDefinition Height="0.01*"/>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="0.01*"/>
                <RowDefinition />
                <RowDefinition Height="0.02*"/>
            </Grid.RowDefinitions>
            <Border Grid.ColumnSpan="3" Grid.Column="1" Grid.Row="3" Background="#111111" BorderThickness="1" BorderBrush="#999999" CornerRadius="5">
                <Grid Margin="2,2,2,2">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="9*"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <ProgressBar  Value="{Binding Rssi.Value}" BorderThickness="0" Minimum="25" Maximum="270" BorderBrush="{x:Null}" Background="{x:Null}">
                        <ProgressBar.Foreground>
                            <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                                <GradientStop Color="#FF009999" Offset="0.002"/>
                                <GradientStop Color="#FFFF2222" Offset="0.781"/>
                            </LinearGradientBrush>
                        </ProgressBar.Foreground>
                    </ProgressBar>
                    <Rectangle>
                        <Rectangle.Fill>
                            <VisualBrush TileMode="Tile" Viewport="0,0,9,30" ViewportUnits="Absolute" Viewbox="0,0,11,30" ViewboxUnits="Absolute">
                                <VisualBrush.Visual>
                                    <Grid>
                                        <Rectangle Fill="#202020" Width="5" Height="30"/>
                                    </Grid>
                                </VisualBrush.Visual>
                            </VisualBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Viewbox Grid.Row="1" Stretch="Fill">
                        <TextBlock FontFamily="Courier New" Foreground="#FF876E16">
                                1     |     3     |     5     |     7     |     9     |    20+    |    40+    |   60+ 
                        </TextBlock>
                    </Viewbox>
                    <ui:PadButton Margin="3,0,0,0" Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" PadKey="18" Background="Black">
                        <ui:PadLabel FontSize="{Binding FontSize.Value[3]}">PTT</ui:PadLabel>
                    </ui:PadButton>
                </Grid>
            </Border>
            <Grid Grid.ColumnSpan="3" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="6.75*"/>
                    <ColumnDefinition Width="0.2*"/>
                    <ColumnDefinition Width="6.75*"/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label x:Name="RadioMode" MouseLeftButtonDown="AppMode_MouseLeftButtonDown" Opacity="{Binding RadioOpc.Value}" Grid.Row="0" Grid.Column="0" Content="📡" FontSize="{Binding FontSize.Value[4]}"/>
                <Label x:Name="ChannelMode" MouseLeftButtonDown="AppMode_MouseLeftButtonDown" Opacity="{Binding ChannelOpc.Value}" Grid.Row="0" Grid.Column="1" Content="📖" FontSize="{Binding FontSize.Value[4]}"/>
                <Label x:Name="PowerMode" MouseLeftButtonDown="AppMode_MouseLeftButtonDown" Opacity="{Binding PowerOpc.Value}" Grid.Column="2" Content="📶" FontSize="{Binding FontSize.Value[4]}"/>
                <Label x:Name="TunerMode" MouseLeftButtonDown="AppMode_MouseLeftButtonDown" Opacity="{Binding TunerOpc.Value}" Grid.Row="0" Grid.Column="3" Content="📻" FontSize="{Binding FontSize.Value[4]}"/>
                <Label x:Name="FlashMode" MouseLeftButtonDown="AppMode_MouseLeftButtonDown" Opacity="{Binding FlashOpc.Value}" Grid.Column="5" Content="⚡" FontSize="{Binding FontSize.Value[4]}"/>
                <Label x:Name="AnalyzerMode" Opacity="{Binding AnalyserMode.Opacity}" MouseLeftButtonDown="AnalyzerMode_MouseLeftButtonDown" Grid.Column="4" Content="📊" FontSize="{Binding FontSize.Value[4]}"/>
                <Label IsHitTestVisible="False" HorizontalContentAlignment="Right" Grid.Column="6" FontWeight="Bold" Content="TID Station" FontSize="{Binding FontSize.Value[4]}"/>
                <Label IsHitTestVisible="False" HorizontalContentAlignment="Left" Grid.Column="8" FontWeight="Normal" Content="v0.37b nicsure 2024" FontSize="{Binding FontSize.Value[3.5]}"/>
                <Label x:Name="ShiftMode" MouseLeftButtonDown="ShiftMode_MouseLeftButtonDown" Opacity="{Binding ShiftMode.Opacity}" Grid.Column="9" Content="⎇" FontSize="{Binding FontSize.Value[5]}"/>
                <Label x:Name="ModulationSelect" MouseLeftButtonDown="ModulationSelect_MouseLeftButtonDown" FontWeight="Bold" Grid.ColumnSpan="2" Grid.Column="10" Content="{Binding ModulationOverride.Value}" FontSize="{Binding FontSize.Value[4]}"/>
                <Label x:Name="MinimizeButton" MouseLeftButtonDown="MinimizeButton_MouseLeftButtonDown" FontWeight="Bold" Grid.Column="12" Content="─" FontSize="{Binding FontSize.Value[6]}"/>
                <Label x:Name="MaximizeButton" MouseLeftButtonDown="MaximizeButton_MouseLeftButtonDown" FontWeight="Bold" Grid.Column="13" Content="▢" FontSize="{Binding FontSize.Value[5]}"/>
                <Label x:Name="CloseButton" MouseLeftButtonDown="CloseButton_MouseLeftButtonDown" FontWeight="Bold" Grid.Column="14" Content="❌" FontSize="{Binding FontSize.Value[4]}"/>
            </Grid>
            <Border Opacity="{Binding VfoOpacityA.Value}" Background="Black" Grid.Column="1" Grid.Row="1" CornerRadius="10" BorderBrush="{Binding VfoBorderA.Value}" BorderThickness="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0"/>
                        <ColumnDefinition Width="1.15*"/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="0.1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.1*"/>
                        <RowDefinition/>
                        <RowDefinition Height="2*"/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition Height="0.1*"/>
                    </Grid.RowDefinitions>
                    <Label IsHitTestVisible="{Binding AllowEditA}" x:Name="PwrLabA" MouseLeftButtonDown="PwrLabA_MouseLeftButtonDown" Grid.Row="1" Grid.Column="1" Content="{Binding PwrLabelA.Value}" FontSize="{Binding FontSize.Value[5.75]}"/>
                    <Label IsHitTestVisible="{Binding AllowEditA}" x:Name="BwLabA" MouseLeftButtonDown="BwLabA_MouseLeftButtonDown" Grid.Row="1" Grid.Column="2" Content="{Binding BwLabelA.Value}" FontSize="{Binding FontSize.Value[5.75]}"/>
                    <Label x:Name="PttLabA" IsHitTestVisible="{Binding AllowEditA}" MouseLeftButtonDown="PttLab_MouseLeftButtonDown" Opacity="{Binding PttIdA.Opacity}" Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="2" Content="{Binding PttIdALab.Value}" FontSize="{Binding FontSize.Value[5.75]}"/>
                    <Label x:Name="BusyLabA" IsHitTestVisible="{Binding AllowEditA}" MouseLeftButtonDown="BusyLab_MouseLeftButtonDown" Opacity="{Binding BusyLockA.Opacity}" Grid.Row="1" Grid.Column="5" Content="B" FontSize="{Binding FontSize.Value[5.75]}"/>



                    <Label x:Name="FqStpLabA" MouseLeftButtonDown="FqStpLabA_MouseLeftButtonDown" Grid.Row="1" Grid.Column="6" Grid.ColumnSpan="2" Content="{Binding FrqStpLabelA.Value}" FontSize="{Binding FontSize.Value[4.5]}">
                        <Label.ContextMenu>
                            <ContextMenu Tag="NLC">
                                <MenuItem Header="Radio" Click="CustomStepA_Click" />
                                <Separator/>
                                <MenuItem Header="8.33" Click="CustomStepA_Click" />
                                <Separator/>
                                <MenuItem Header="0.01" Click="CustomStepA_Click" />
                                <MenuItem Header="0.02" Click="CustomStepA_Click" />
                                <MenuItem Header="0.05" Click="CustomStepA_Click" />
                                <MenuItem Header="0.10" Click="CustomStepA_Click" />
                                <MenuItem Header="0.25" Click="CustomStepA_Click" />
                                <MenuItem Header="0.50" Click="CustomStepA_Click" />
                                <MenuItem Header="1.00" Click="CustomStepA_Click" />
                                <MenuItem Header="2.00" Click="CustomStepA_Click" />
                            </ContextMenu>
                        </Label.ContextMenu>
                    </Label>
                    <Label IsHitTestVisible="{Binding AllowEditA}" Grid.Row="2" Grid.Column="1" Content="{Binding ToneRxA.Value}" FontSize="{Binding FontSize.Value[3.5]}">
                        <Label.ContextMenu>
                            <ui:ToneMenu>
                                <ContextMenu.ItemContainerStyle>
                                    <Style TargetType="MenuItem">
                                        <EventSetter Event="Click" Handler="ToneMenuItemRxA_Click"/>
                                    </Style>
                                </ContextMenu.ItemContainerStyle>
                            </ui:ToneMenu>
                        </Label.ContextMenu>
                    </Label>

                    <Viewbox Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="6" Stretch="Fill" >
                        <ui:Frequency IsHitTestVisible="{Binding AllowEditA}" x:Name="VfoRxA" Value="{Binding VfoRxA.Value, Mode=TwoWay}" />
                    </Viewbox>
                    <Label IsHitTestVisible="{Binding AllowEditA}" Grid.Row="3" Grid.Column="1" Content="{Binding ToneTxA.Value}" FontSize="{Binding FontSize.Value[3.5]}">
                        <Label.ContextMenu>
                            <ui:ToneMenu>
                                <ContextMenu.ItemContainerStyle>
                                    <Style TargetType="MenuItem">
                                        <EventSetter Event="Click" Handler="ToneMenuItemTxA_Click"/>
                                    </Style>
                                </ContextMenu.ItemContainerStyle>
                            </ui:ToneMenu>
                        </Label.ContextMenu>
                    </Label>
                    <Label IsHitTestVisible="{Binding AllowEditA}" x:Name="SpDrA" MouseLeftButtonDown="SpDrA_MouseLeftButtonDown" Grid.Row="3" Grid.Column="2" Content="{Binding SplitDirA.Value}" FontSize="{Binding FontSize.Value[5]}"/>
                    <Viewbox Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="5" Stretch="Fill" >
                        <ui:Frequency IsHitTestVisible="{Binding AllowEditA}" SelectedBrush="Aqua" MouseLeftButtonDown="VfoTxA_MouseLeftButtonDown" x:Name="VfoTxA" IsEditable="{Binding SplitTxA.Value}" Foreground="Yellow" Value="{Binding VfoTxA.Value, Mode=TwoWay}" />
                    </Viewbox>
                    <Label x:Name="ReverseALab" IsHitTestVisible="{Binding AllowEditA}" MouseLeftButtonDown="ReverseALab_MouseLeftButtonDown" HorizontalContentAlignment="Center" Grid.Row="4" Grid.Column="1" FontSize="{Binding FontSize.Value[5.75]}" Content="R" Opacity="{Binding ReverseA.Opacity}"/>

                    <Label x:Name="VfoChASel" MouseLeftButtonDown="VfoChASel_MouseLeftButtonDown" Grid.Row="4" Grid.Column="4" Grid.ColumnSpan="4" FontSize="{Binding FontSize.Value[5]}" Content="{Binding VfoChALabel.Value}"/>
                    <Label x:Name="ScLabA" IsHitTestVisible="{Binding AllowEditA}" MouseLeftButtonDown="ScLabA_MouseLeftButtonDown" Grid.Row="4" Grid.Column="2" Content="S" Opacity="{Binding ScrambleA.Opacity}" FontSize="{Binding FontSize.Value[5.75]}"/>

                    <ui:NumEntry Visibility="{Binding DenyEditA}" x:Name="ChannelEntryA" Grid.Row="4" Grid.Column="3"  Value="{Binding VfoChNumEnterA.Value, Mode=TwoWay}" FontSize="{Binding FontSize.Value[4.5]}" Content="{Binding VfoChNumALabel.Value, Mode=TwoWay}"/>
                </Grid>
            </Border>

            <Border Opacity="{Binding VfoOpacityB.Value}" Background="Black" Grid.Column="3" Grid.Row="1" CornerRadius="10" BorderBrush="{Binding VfoBorderB.Value}" BorderThickness="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0"/>
                        <ColumnDefinition Width="1.15*"/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="0.1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.1*"/>
                        <RowDefinition/>
                        <RowDefinition Height="2*"/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition Height="0.1*"/>
                    </Grid.RowDefinitions>
                    <Label IsHitTestVisible="{Binding AllowEditB}" x:Name="PwrLabB" MouseLeftButtonDown="PwrLabB_MouseLeftButtonDown" Grid.Row="1" Grid.Column="1" Content="{Binding PwrLabelB.Value}" FontSize="{Binding FontSize.Value[5.75]}"/>
                    <Label IsHitTestVisible="{Binding AllowEditB}" x:Name="BwLabB" MouseLeftButtonDown="BwLabB_MouseLeftButtonDown" Grid.Row="1" Grid.Column="2" Content="{Binding BwLabelB.Value}" FontSize="{Binding FontSize.Value[5.75]}"/>
                    <Label x:Name="PttLabB" IsHitTestVisible="{Binding AllowEditB}" MouseLeftButtonDown="PttLab_MouseLeftButtonDown" Opacity="{Binding PttIdB.Opacity}" Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="2" Content="{Binding PttIdBLab.Value}" FontSize="{Binding FontSize.Value[5.75]}"/>
                    <Label x:Name="BusyLabB" IsHitTestVisible="{Binding AllowEditB}"  MouseLeftButtonDown="BusyLab_MouseLeftButtonDown" Grid.Row="1" Grid.Column="5" Content="B" Opacity="{Binding BusyLockB.Opacity}" FontSize="{Binding FontSize.Value[5.75]}"/>


                    <Label x:Name="FqStpLabB" MouseLeftButtonDown="FqStpLabB_MouseLeftButtonDown" Grid.Row="1" Grid.Column="6" Grid.ColumnSpan="2" Content="{Binding FrqStpLabelB.Value}" FontSize="{Binding FontSize.Value[4.5]}">
                        <Label.ContextMenu>
                            <ContextMenu Tag="NLC">
                                <MenuItem Header="Radio" Click="CustomStepB_Click" />
                                <Separator/>
                                <MenuItem Header="8.33" Click="CustomStepB_Click" />
                                <Separator/>
                                <MenuItem Header="0.01" Click="CustomStepB_Click" />
                                <MenuItem Header="0.02" Click="CustomStepB_Click" />
                                <MenuItem Header="0.05" Click="CustomStepB_Click" />
                                <MenuItem Header="0.10" Click="CustomStepB_Click" />
                                <MenuItem Header="0.25" Click="CustomStepB_Click" />
                                <MenuItem Header="0.50" Click="CustomStepB_Click" />
                                <MenuItem Header="1.00" Click="CustomStepB_Click" />
                                <MenuItem Header="2.00" Click="CustomStepB_Click" />
                            </ContextMenu>
                        </Label.ContextMenu>
                    </Label>
                    <Label IsHitTestVisible="{Binding AllowEditB}" Grid.Row="2" Grid.Column="1" Content="{Binding ToneRxB.Value}" FontSize="{Binding FontSize.Value[3.5]}">
                        <Label.ContextMenu>
                            <ui:ToneMenu>
                                <ContextMenu.ItemContainerStyle>
                                    <Style TargetType="MenuItem">
                                        <EventSetter Event="Click" Handler="ToneMenuItemRxB_Click"/>
                                    </Style>
                                </ContextMenu.ItemContainerStyle>
                            </ui:ToneMenu>
                        </Label.ContextMenu>
                    </Label>
                    <Viewbox Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="6" Stretch="Fill" >
                        <ui:Frequency IsHitTestVisible="{Binding AllowEditB}" x:Name="VfoRxB" Value="{Binding VfoRxB.Value, Mode=TwoWay}" />
                    </Viewbox>
                    <Label IsHitTestVisible="{Binding AllowEditB}" Grid.Row="3" Grid.Column="1" Content="{Binding ToneTxB.Value}" FontSize="{Binding FontSize.Value[3.5]}">
                        <Label.ContextMenu>
                            <ui:ToneMenu>
                                <ContextMenu.ItemContainerStyle>
                                    <Style TargetType="MenuItem">
                                        <EventSetter Event="Click" Handler="ToneMenuItemTxB_Click"/>
                                    </Style>
                                </ContextMenu.ItemContainerStyle>
                            </ui:ToneMenu>
                        </Label.ContextMenu>
                    </Label>
                    <Label IsHitTestVisible="{Binding AllowEditB}" x:Name="SpDrB" MouseLeftButtonDown="SpDrB_MouseLeftButtonDown" Grid.Row="3" Grid.Column="2" Content="{Binding SplitDirB.Value}" FontSize="{Binding FontSize.Value[5]}"/>
                    <Viewbox Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="5" Stretch="Fill" >
                        <ui:Frequency IsHitTestVisible="{Binding AllowEditB}" SelectedBrush="Aqua" MouseLeftButtonDown="VfoTxB_MouseLeftButtonDown" x:Name="VfoTxB" IsEditable="{Binding SplitTxB.Value}" Foreground="Yellow" Value="{Binding VfoTxB.Value, Mode=TwoWay}" />
                    </Viewbox>
                    <Label x:Name="ReverseBLab" IsHitTestVisible="{Binding AllowEditB}" MouseLeftButtonDown="ReverseBLab_MouseLeftButtonDown" HorizontalContentAlignment="Center" Grid.Row="4" Grid.Column="1" FontSize="{Binding FontSize.Value[5.75]}" Content="R" Opacity="{Binding ReverseB.Opacity}"/>
                    <Label x:Name="VfoChBSel" MouseLeftButtonDown="VfoChBSel_MouseLeftButtonDown" Grid.Row="4" Grid.Column="4" Grid.ColumnSpan="4" FontSize="{Binding FontSize.Value[5]}" Content="{Binding VfoChBLabel.Value}"/>
                    <Label x:Name="ScLabB" IsHitTestVisible="{Binding AllowEditB}" MouseLeftButtonDown="ScLabB_MouseLeftButtonDown" Grid.Row="4" Grid.Column="2" Content="S" Opacity="{Binding ScrambleB.Opacity}" FontSize="{Binding FontSize.Value[5.75]}"/>

                    <ui:NumEntry Visibility="{Binding DenyEditB}" x:Name="ChannelEntryB" Grid.Row="4" Grid.Column="3"  Value="{Binding VfoChNumEnterB.Value, Mode=TwoWay}" FontSize="{Binding FontSize.Value[4.5]}" Content="{Binding VfoChNumBLabel.Value}"/>
                </Grid>
            </Border>

            <Border Visibility="{Binding AnalyserMode.Visible}" Background="Black" Grid.Column="3" Grid.Row="1" CornerRadius="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.75*"/>
                        <RowDefinition Height="6*"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" FontSize="{Binding FontSize.Value[3]}" Content="{Binding AnalyserHLabel.Value}" Foreground="Yellow" />
                    <Label Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2" FontSize="{Binding FontSize.Value[3]}" Content="{Binding AnalyserFLabel.Value}" Foreground="Orange" />
                    <Label x:Name="StartFA" MouseLeftButtonDown="StartFA_MouseLeftButtonDown" IsHitTestVisible="{Binding AnalyserRun.Not}" Opacity="{Binding AnalyserRun.RevOpacity}" HorizontalAlignment="Center" Grid.Row="3" Grid.Column="0" FontSize="{Binding FontSize.Value[4]}" Content="START"/>
                    <Label x:Name="StopFA" MouseLeftButtonDown="StopFA_MouseLeftButtonDown" IsHitTestVisible="{Binding AnalyserRun.Value}" Opacity="{Binding AnalyserRun.Opacity}" HorizontalAlignment="Center" Grid.Row="3" Grid.Column="1" FontSize="{Binding FontSize.Value[4]}" Content="STOP"/>
                    <Label x:Name="OnceFA" MouseLeftButtonDown="OnceFA_MouseLeftButtonDown" IsHitTestVisible="{Binding AnalyserRun.Not}" Opacity="{Binding AnalyserRun.RevOpacity}" HorizontalAlignment="Center" Grid.Row="3" Grid.Column="2" FontSize="{Binding FontSize.Value[4]}" Content="ONCE"/>
                    <ui:DecimalEntry MouseLeftButtonDown="StepsEntry_MouseLeftButtonDown" x:Name="StepsEntry" IsHitTestVisible="{Binding AnalyserRun.Not}" Opacity="{Binding AnalyserRun.RevOpacity}" DecimalPlaces="0" WholeDigits="3" Minimum="10" Maximum="200" Foreground="Green" HorizontalAlignment="Center" Grid.Row="3" Grid.Column="3" FontSize="{Binding FontSize.Value[4]}" Value="{Binding AnalyserSteps.Value, Mode=TwoWay}"/>
                    <ui:BarGraph Grid.Row="1" Grid.ColumnSpan="4" x:Name="ScanGraph" BarCount="{Binding AnalyserSteps.Value}" />
                </Grid>
            </Border>

            <Border Padding="5,5,5,5" Background="#1e1e1e" Grid.Column="1" Grid.Row="5" CornerRadius="10" BorderBrush="#555555" BorderThickness="1">
                <Grid>
                    <Grid.Background>
                        <ImageBrush/>
                    </Grid.Background>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition Height="0.5*"/>
                    </Grid.RowDefinitions>
                    <ui:PadButton Grid.Column="1" Grid.Row="0" PadKey="35">
                        <ui:PadLabel FontSize="{Binding FontSize.Value[7]}">1</ui:PadLabel>
                    </ui:PadButton>
                    <ui:PadButton Grid.Column="2" Grid.Row="0" PadKey="36">
                        <ui:PadLabel FontSize="{Binding FontSize.Value[7]}">2</ui:PadLabel>
                    </ui:PadButton>
                    <ui:PadButton Grid.Column="3" Grid.Row="0" PadKey="37">
                        <ui:PadLabel FontSize="{Binding FontSize.Value[7]}">3</ui:PadLabel>
                    </ui:PadButton>
                    <ui:PadButton Grid.Column="4" Grid.Row="0" PadKey="2">
                        <ui:PadLabel FontSize="{Binding FontSize.Value[7]}">🠘</ui:PadLabel>
                    </ui:PadButton>
                    <ui:PadButton Grid.Column="0" Grid.Row="0" PadKey="24">
                        <ui:PadLabel FontSize="{Binding FontSize.Value[7]}">⇧</ui:PadLabel>
                    </ui:PadButton>
                    <ui:PadButton Grid.Column="1" Grid.Row="1" PadKey="38">
                        <ui:PadLabel FontSize="{Binding FontSize.Value[7]}">4</ui:PadLabel>
                    </ui:PadButton>
                    <ui:PadButton Grid.Column="2" Grid.Row="1" PadKey="39">
                        <ui:PadLabel FontSize="{Binding FontSize.Value[7]}">5</ui:PadLabel>
                    </ui:PadButton>
                    <ui:PadButton Grid.Column="3" Grid.Row="1" PadKey="40">
                        <ui:PadLabel FontSize="{Binding FontSize.Value[7]}">6</ui:PadLabel>
                    </ui:PadButton>
                    <ui:PadButton Grid.Column="4" Grid.Row="1" PadKey="34">
                        <ui:PadLabel FontSize="{Binding FontSize.Value[7]}">0</ui:PadLabel>
                    </ui:PadButton>
                    <ui:PadButton Grid.Column="0" Grid.Row="1" PadKey="26">
                        <ui:PadLabel FontSize="{Binding FontSize.Value[7]}">⇩</ui:PadLabel>
                    </ui:PadButton>
                    <ui:PadButton Grid.Column="1" Grid.Row="2" PadKey="41">
                        <ui:PadLabel FontSize="{Binding FontSize.Value[7]}">7</ui:PadLabel>
                    </ui:PadButton>
